<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonasiBukuCetak">

    <RelativeLayout
        android:id="@+id/rv_bukucetak"
        android:gravity="center_vertical"
        android:background="@color/biru"
        android:orientation="horizontal"
        android:layout_width="411dp"
        android:layout_height="40dp">

        <ImageView
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:layout_width="193dp"
            android:layout_height="37dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="Donasi Buku Cetak"
            android:textColor="@color/putih" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_cetak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_bukucetak"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:text="Kirimkan donasi buku anda ke alamat berikut ini:Jl. K.H. Agus Salim
No.5,Sobo,Kec. Banyuwangi,Kabupaten Banyuwangi, Jawa Timur (Depan Dinas Pendidikan Banyuwangi).
"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="8pt"
            android:text="Jika sudah mengirimkan buku melalui alamat diatas, silahkan
melakukan konfirmasi pengiriman di bawah ini."
            android:textColor="@color/black"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@id/ly_cetak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="Foto bukti pengiriman"
            android:textSize="8pt"
            android:padding="5dp"/>

        <ImageView
            android:layout_width="281dp"
            android:layout_height="115dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/form4" />


        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="65dp"
            android:background="@color/biruMuda"
            android:text="Pilih file" />

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="60dp"
            android:background="@color/biru"
            android:text="kirim"/>
    </RelativeLayout>


</RelativeLayout>