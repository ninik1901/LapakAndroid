<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonasiBukuCetak">

    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@color/biru"
        android:orientation="horizontal"
        android:layout_width="411dp"
        android:layout_height="40dp">

        <ImageView
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:layout_width="193dp"
            android:layout_height="37dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="Donasi Buku Cetak"
            android:textColor="@color/putih" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="IDENTITAS PENGIRIM"
        android:textColor="@color/black" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp">

        <EditText
            android:id="@+id/edt_alamat"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Alamat"
            android:paddingLeft="10dp"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp">

        <EditText
            android:id="@+id/edt_telepon"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="No.Telepon"
            android:paddingLeft="10dp"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="330dp"
        android:layout_height="10dp"
        android:src="@drawable/form3"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="195dp"
        android:text="DESKRIPSI DONASI"
        android:textColor="@color/black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="215dp">

        <EditText
            android:id="@+id/edt_judul_ebook"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Judul ebook"
            android:paddingLeft="10dp"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="270dp">

        <EditText
            android:id="@+id/edt_jumlah_donasi"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Jumlah donasi"
            android:paddingLeft="10dp"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="325dp">

        <EditText
            android:id="@+id/edt_kategori_ebook"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Kategori ebook"
            android:paddingLeft="10dp"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="380dp"
        android:text="File ebook"
        android:textSize="8pt"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="45dp"
        android:src="@drawable/form4"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="70dp"
        android:background="@color/biruMuda"
        android:text="Pilih file"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="480dp"
        android:background="@color/biru"
        android:text="kirim"/>

</RelativeLayout>