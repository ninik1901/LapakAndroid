<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonasiEbook">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/biru"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Donasi Ebook"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp">

        <EditText
            android:id="@+id/edt_judulEbook"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="Judul buku/ebook"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="8pt" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="120dp"
        android:text="File ebook"
        android:textSize="8pt"/>

    <ImageView
        android:layout_width="307dp"
        android:layout_height="158dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="155dp"
        android:src="@drawable/form4" />

    <Button
        android:id="@+id/pilih_file"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="145dp"
        android:background="@color/biruMuda"
        android:text="Pilih file"/>

    <Button
        android:id="@+id/btn_donasi_ebook"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="330dp"
        android:background="@color/biru"
        android:text="kirim"/>


</RelativeLayout>