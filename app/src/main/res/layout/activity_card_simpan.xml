<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="200px"
        android:layout_height="300px"
        android:scaleType="centerCrop"
        android:src="@drawable/buku2"/>

    <TextView
        android:id="@+id/tv_item_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:text="Konspirasi Semesta"
        android:layout_toEndOf="@id/image"/>

        <ImageView
            android:layout_below="@+id/tv_item_nama"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:src="@drawable/ic_remove_red_eye_black_24dp" />

        <TextView
            android:id="@+id/detail_baca"
            android:layout_below="@+id/tv_item_nama"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="100K"
            android:layout_marginLeft="150dp"/>

        <TextView
            android:id="@+id/tv_item_sinopsis"
            android:layout_width="220dp"
            android:layout_height="61dp"
            android:layout_below="@id/tv_item_nama"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/image"
            android:text="Konspirasi semesta merupakan buku ke-2 Dwilogi Tuhan Maha Romantis"
            android:textColor="@color/abu" />




    </RelativeLayout>

</androidx.cardview.widget.CardView>